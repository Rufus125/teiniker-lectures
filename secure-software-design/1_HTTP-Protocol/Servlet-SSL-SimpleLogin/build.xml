<project name="Servlet-SSL-SimpleLogin" default="deploy">
	
	<property name="src" location="src" />
	<property name="web" location="WebContent" />
	<property name="metadata" location="${web}/WEB-INF" />
	<property name="build" location="build/classes" />
	<property name="app" value="${ant.project.name}.war" />
	<property name="dist" location="dist" />
	
	<property file="tomcat.properties"/>
	<fail unless="tomcat.home" message="tomcat.properties file not found!"/>
	
	<target name="init" >
		<mkdir dir="${dist}" />
	</target>

	<target name="clean">
		<delete dir="${dist}" />
	</target>

			
	<target name="war" depends="init" >
		<war destfile="${dist}/${app}" webxml="${metadata}/web.xml">
			<fileset dir="${web}"/>
			<classes dir="${build}"/>
		</war>
	</target>
	

	<target name="deploy" depends="war">
		<copy file="${dist}/${app}" todir="${tomcat.deploy}" overwrite="true" />
	</target>
	
	<target name="undeploy"> 
		<delete file="${tomcat.deploy}/${app}"/>
	</target>

</project>	